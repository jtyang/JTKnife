<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barrage_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_barrage_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_barrage_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/meinv"/>

    <TextView
        android:id="@+id/txt_barrage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_barrage_avatar"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_barrage_avatar"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:singleLine="true"
        android:text="Jason"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/img_level"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txt_barrage_name"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/txt_barrage_name" />

    <TextView
        android:id="@+id/txt_barrage_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_barrage_avatar"
        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_barrage_avatar"
        android:singleLine="true"
        android:text="hahahahahaha"
        android:textColor="@color/black"
        android:textSize="12dp" />
</RelativeLayout>
